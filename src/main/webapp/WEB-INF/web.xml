<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	 version="3.1">
  
  
  <servlet>
  <servlet-name>JsonPerson</servlet-name>
  <servlet-class>com.todocodeacademy.model.JsonPerson</servlet-class>
  </servlet>
  <servlet-mapping>
  <servlet-name>JsonPerson</servlet-name>
  <url-pattern>/JsonPerson</url-pattern>
  </servlet-mapping>
  
    <servlet>
  <servlet-name>Login</servlet-name>
  <servlet-class>com.todocodeacademy.model.Login</servlet-class>
  </servlet>
  <servlet-mapping>
  <servlet-name>Login</servlet-name>
  <url-pattern>/Login</url-pattern>
  </servlet-mapping>
  
<filter> 
     <filter-name>FilterLogin</filter-name> 
    <filter-class>com.todocodeacademy.model.FilterLogin</filter-class> 
</filter> 
<filter-mapping> 
    <filter-name>FilterLogin</filter-name> 
    <url-pattern>/Login</url-pattern> 
</filter-mapping> 
  

</web-app>
